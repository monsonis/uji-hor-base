    /> <property name="jdbcUrl" value="jdbc:hsqldb:mem:db" /> <property name="initialPoolSize" value="10" /> <property name="maxPoolSize" value="100" /> <property name="minPoolSize" value="10" /> <property 
    name="acquireIncrement" value="5" /> <property name="acquireRetryAttempts" value="30" /> <property name="idleConnectionTestPeriod"> <value>14400</value> </property> <property name="checkoutTimeout"> <value>25200</value> 
    </property> <property name="properties"> <props> <prop key="c3p0.max_size">100</prop> <prop key="c3p0.min_size">10</prop> <prop key="c3p0.max_statements">0</prop> <prop key="c3p0.preferredTestQuery">select 
    1;</prop> <prop key="user">sa</prop> <prop key="password"></prop> </props> </property> </bean -->

  <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
    <property name="driverClassName" value="org.h2.Driver" />
    <property name="url" value="jdbc:h2:mem:test;DB_CLOSE_DELAY=-1;TRACE_LEVEL_SYSTEM_OUT=2;LOCK_MODE=0" />
  </bean>


  <bean id="entityManagerFactory" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
    <property ref="dataSource" name="dataSource"></property>
    <property name="persistenceUnitName" value="persistenceUnit" />
    <property name="jpaVendorAdapter">
      <bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
        <property name="database" value="H2" />
        <property name="showSql" value="false" />
        <property name="databasePlatform" value="org.hibernate.dialect.H2Dialect" />
      </bean>
    </property>
    <property name="jpaProperties">
      <props>
        <prop key="hibernate.hbm2ddl.auto">create</prop>
        <prop key="hibernate.cache.provider_class">org.hibernate.cache.HashtableCacheProvider</prop>
        <prop key="hibernate.jdbc.batch_size">0</prop>
      </props>
    </property>
  </bean>

</beans>

